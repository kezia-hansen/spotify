---
const { title } = Astro.props;
---

<section>
  <header>
    <h2>
      <a href="#0">{title}</a>
    </h2>
    <a href="#">Show all</a>
  </header>
  <ul class="grid-container">
    <slot />
  </ul>
</section>

<style>
  section {
    display: grid;
    grid-auto-rows: min-content;
    gap: 1rem;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
  }

  header > a {
    font-size: 0.875rem;
    font-weight: 500;
  }

  h2 a {
    color: inherit;
  }

  a:hover {
    text-decoration: underline;
  }

  .grid-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    /* hide wrapping rows */
    grid-template-rows: 1fr;
    grid-auto-rows: 0;
    gap: 1em;
    overflow: hidden;
  }
</style>
