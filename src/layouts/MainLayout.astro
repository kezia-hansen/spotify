---
import "../styles/style.css";
import Nav from "../components/Nav.astro";
import TopBar from "../components/TopBar.astro";
import Footer from "../components/Footer.astro";
const { hasSearch } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Home</title>
  </head>
  <body>
    <Nav />
    <TopBar hasSearch={hasSearch}/>
    <main>
 <slot hasSearch={hasSearch} />
    </main>
    <Footer />
  </body>
</html>


<style>
  body {
    display: grid;
    grid-template-columns: auto 1fr;
    grid-template-rows: auto 1fr auto;
    grid-template-areas:
      "nav topbar"
      "nav main"
      "footer footer";
    height: 100%;
  }
  :global(main) {
    grid-area: main;
  }
  :global(nav) {
    grid-area: nav;
  }
  :global(.topbar) {
    grid-area: topbar;
  }
  :global(footer) {
    grid-area: footer;
  }

  main {
    display: grid;
    grid-auto-rows: min-content;
    gap: 2.5rem;
    background: linear-gradient(#1f1f1f, #191919, #121212) no-repeat;
    overflow-y: auto;
    padding: 1.5rem 1rem;
  }

  @media (width > 1000px) {
    main {
      padding: 1.5rem 2rem;
    }
  }
</style>
